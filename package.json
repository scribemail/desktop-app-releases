{
  "name": "Scribe",
  "version": "1.0.2",
  "license": "MIT",
  "author": "hello@scribe-mail.com",
  "description": "Scribe Desktop",
  "homepage": "https://scribe-mail.com",
  "scripts": {
    "dev": "electron-webpack dev",
    "compile": "electron-webpack",
    "build-win": "WIN_CSC_LINK=build/certificate.p12 yarn compile && electron-builder -w",
    "build-mac": "yarn compile && electron-builder -m",
    "dist-win": "export $(xargs < .aws-credentials) && WIN_CSC_LINK=build/certificate.p12 yarn compile && electron-builder -w --publish always",
    "dist-mac": "export $(xargs < .aws-credentials) && yarn compile && electron-builder -m --publish always"
  },
  "electronWebpack": {
    "title": "Scribe",
    "main": {
      "webpackConfig": "main.webpack.config.transformer.js"
    },
    "renderer": {
      "webpackConfig": "renderer.webpack.config.transformer.js"
    },
    "whiteListedModules": [
      "react-loader-spinner"
    ]
  },
  "build": {
    "publish": {
      "provider": "s3",
      "bucket":   "scribe-desktop-app",
      "region":   "eu-west-3"
    },
    "productName": "Scribe",
    "mac": {
      "extendInfo": {
        "LSUIElement": "true"
      },
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "electronLanguages": [
        "en"
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    }
  },
  "dependencies": {
    "@azure/msal-node": "^1.0.3",
    "@getstation/electron-google-oauth2": "^2.1.0",
    "@microsoft/mgt-components": "^2.1.0",
    "@microsoft/mgt-electron-provider": "^2.1.0",
    "@microsoft/mgt-element": "^2.1.0",
    "actioncable": "^5.2.5",
    "auto-launch": "^5.0.5",
    "axios": "^0.21.1",
    "bootstrap": "^4.6.0",
    "classnames": "^2.3.1",
    "electron-is-dev": "^2.0.0",
    "electron-store": "^8.0.0",
    "electron-unhandled": "^3.0.2",
    "electron-updater": "^4.3.8",
    "eslint_d": "^10.0.4",
    "final-form": "^4.20.2",
    "immutability-helper": "^3.1.1",
    "javascript-time-ago": "^2.3.4",
    "jquery": "^3.6.0",
    "loader-utils": "^2.0.0",
    "lodash": "^4.17.21",
    "menubar": "^9.0.3",
    "msal-electron-poc": "^0.1.0",
    "prop-types": "^15.7.2",
    "rc-switch": "^3.2.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-final-form": "^6.5.3",
    "react-loader-spinner": "^4.0.0",
    "react-switch": "^6.0.0",
    "react-time-ago": "^6.2.2",
    "react-uuid": "^1.0.2",
    "reactstrap": "^8.9.0",
    "source-map-support": "^0.5.16",
    "timeago-react": "^3.0.2"
  },
  "devDependencies": {
    "@babel/preset-react": "^7.13.13",
    "electron": "^12.0.6",
    "electron-builder": "^22.11.1",
    "electron-webpack": "^2.8.2",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-plugin-align-import": "^1.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "sass": "^1.32.12",
    "sass-loader": "^10",
    "stylelint": "^13.13.0",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-scss": "^3.19.0",
    "typescript": "^4.2.4",
    "webpack": "~4.42.1"
  }
}
