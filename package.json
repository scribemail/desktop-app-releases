{
  "name": "Scribe",
  "version": "1.7.8",
  "license": "MIT",
  "author": "hello@scribe-mail.com",
  "description": "Scribe Desktop",
  "homepage": "https://scribe-mail.com",
  "scripts": {
    "dev": "electron-webpack dev",
    "compile": "electron-webpack",
    "dist-win": "yarn compile && electron-builder -w=nsis --publish onTag",
    "dist-mac": "yarn compile && electron-builder -m dmg zip pkg --universal --publish onTag",
    "translation:sync": "NODE_ENV=development lingui extract --overwrite && lingui compile",
    "translation:sync_and_purge": "NODE_ENV=development lingui extract --overwrite --clean && lingui compile"
  },
  "electronWebpack": {
    "title": "Scribe",
    "main": {
      "webpackConfig": "main.webpack.config.transformer.js"
    },
    "renderer": {
      "template": "src/renderer/index.html",
      "webpackConfig": "renderer.webpack.config.transformer.js"
    },
    "whiteListedModules": [
      "react-router-dom",
      "react-loader-spinner",
      "@emotion/react",
      "@emotion/styled",
      "@lingui/react"
    ]
  },
  "build": {
    "afterSign": "build/after-sign.js",
    "afterAllArtifactBuild": "build/after-all-artifact-build.js",
    "appId": "com.scribe-mail.scribe",
    "productName": "Scribe",
    "publish": {
      "provider": "github",
      "releaseType": "draft",
      "owner": "scribemail",
      "repo": "desktop-app-releases"
    },
    "mac": {
      "hardenedRuntime": true,
      "extendInfo": {
        "LSUIElement": "true"
      },
      "icon": "icon-mac.png",
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "electronLanguages": [
        "en"
      ]
    },
    "win": {
      "publisherName": "Scribe",
      "certificateSubjectName": "Scribe",
      "verifyUpdateCodeSignature": false,
      "sign": "build/windows-sign.js",
      "extraResources": [
        {
          "from": "node_modules/regedit/vbs",
          "to": "vbs",
          "filter": [
            "**/*"
          ]
        }
      ],
      "signingHashAlgorithms": [
        "sha256"
      ],
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "appx",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": true,
      "perMachine": true
    },
    "dmg": {
      "sign": false
    }
  },
  "dependencies": {
    "@azure/msal-node": "^1.6.0",
    "@babel/core": "^7.15.5",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/plugin-transform-runtime": "^7.15.0",
    "@babel/preset-env": "^7.15.6",
    "@bugsnag/electron": "^7.16.1",
    "@bugsnag/plugin-react": "^7.16.1",
    "@electron/remote": "^2.0.1",
    "@emotion/react": "^11.6.0",
    "@emotion/styled": "^11.6.0",
    "@getstation/electron-google-oauth2": "https://github.com/scribemail/electron-google-oauth2.git",
    "@lingui/babel-preset-react": "^2.9.2",
    "@lingui/cli": "^3.12.1",
    "@lingui/core": "^3.12.1",
    "@lingui/macro": "^3.12.1",
    "@lingui/react": "^3.12.1",
    "@microsoft/mgt-components": "^2.1.0",
    "@microsoft/mgt-electron-provider": "^2.1.0",
    "@microsoft/mgt-element": "^2.1.0",
    "@mui/material": "^5.2.0",
    "actioncable": "^5.2.6",
    "applescript": "^1.0.0",
    "axios": "^0.25.0",
    "babel-loader": "^8.2.2",
    "babel-plugin-macros": "^3.1.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.24",
    "babel-runtime": "^6.26.0",
    "bootstrap": "^4.6.0",
    "classnames": "^2.3.1",
    "dotenv": "^10.0.0",
    "electron-debug": "^3.2.0",
    "electron-is": "^3.0.0",
    "electron-is-dev": "^2.0.0",
    "electron-log": "^4.3.5",
    "electron-store": "^8.0.1",
    "electron-unhandled": "^3.0.2",
    "electron-updater": "^4.6.1",
    "electron-util": "^0.17.2",
    "eslint_d": "^10.0.4",
    "immutability-helper": "^3.1.1",
    "javascript-time-ago": "^2.3.4",
    "jquery": "^3.6.0",
    "loader-utils": "^2.0.0",
    "lodash": "^4.17.21",
    "menubar": "^9.1.1",
    "node-mac-permissions": "^2.2.0",
    "plist": "^3.0.2",
    "prop-types": "^15.7.2",
    "query-string": "^7.0.1",
    "rc-switch": "^3.2.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-helmet": "^6.1.0",
    "react-loader-spinner": "^4.0.0",
    "react-router-dom": "^6.2.1",
    "react-switch": "^6.0.0",
    "react-time-ago": "^6.2.2",
    "react-uuid": "^1.0.2",
    "reactstrap": "^8.9.0",
    "regedit": "^5.0.0",
    "source-map-support": "^0.5.16",
    "timeago-react": "^3.0.2",
    "uuid": "^8.3.2",
    "validate.js": "^0.13.1",
    "xml2js": "^0.4.23"
  },
  "devDependencies": {
    "@babel/preset-react": "^7.14.5",
    "@electron/universal": "^1.1.0",
    "electron": "^17.0.0",
    "electron-builder": "^22.14.13",
    "electron-notarize": "^1.1.1",
    "electron-webpack": "^2.8.2",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-plugin-align-import": "^1.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-string-to-lingui": "^0.12.1",
    "sass": "^1.32.12",
    "sass-loader": "^10",
    "stylelint": "^13.13.0",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-scss": "^3.19.0",
    "typescript": "^4.2.4",
    "webpack": "~4.42.1"
  }
}
