{
  "name": "Scribe",
  "version": "1.3",
  "license": "MIT",
  "author": "hello@scribe-mail.com",
  "description": "Scribe Desktop",
  "homepage": "https://scribe-mail.com",
  "scripts": {
    "dev": "electron-webpack dev",
    "compile": "electron-webpack",
    "build-win": "export $(xargs < .build-env) && yarn compile && electron-builder -w nsis",
    "build-mac": "export $(xargs < .build-env) && yarn compile && electron-builder -m dmg zip pkg",
    "dist-win": "yarn compile && electron-builder -w=nsis --publish onTag",
    "dist-mac": "yarn compile && electron-builder -m dmg zip pkg --publish onTag"
  },
  "electronWebpack": {
    "title": "Scribe",
    "main": {
      "webpackConfig": "main.webpack.config.transformer.js"
    },
    "renderer": {
      "webpackConfig": "renderer.webpack.config.transformer.js"
    },
    "whiteListedModules": [
      "react-loader-spinner"
    ]
  },
  "build": {
    "afterSign": "build/after-sign.js",
    "afterAllArtifactBuild": "build/after-all-artifact-build.js",
    "appId": "com.scribe-mail.scribe",
    "productName": "Scribe",
    "publish": {
      "provider": "github",
      "releaseType": "draft",
      "owner": "scribemail",
      "repo": "desktop-app-releases"
    },
    "mac": {
      "hardenedRuntime": true,
      "extendInfo": {
        "LSUIElement": "true"
      },
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "electronLanguages": [
        "en"
      ]
    },
    "win": {
      "publisherName": "Scribe",
      "certificateSubjectName": "Scribe",
      "verifyUpdateCodeSignature": false,
      "sign": "build/windows-sign.js",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "appx",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": true,
      "perMachine": true
    },
    "dmg": {
      "sign": false
    }
  },
  "dependencies": {
    "@azure/msal-node": "^1.0.3",
    "@bugsnag/electron": "^7.10.0",
    "@bugsnag/plugin-react": "^7.10.0",
    "@getstation/electron-google-oauth2": "^2.1.0",
    "@microsoft/mgt-components": "^2.1.0",
    "@microsoft/mgt-electron-provider": "^2.1.0",
    "@microsoft/mgt-element": "^2.1.0",
    "actioncable": "^5.2.5",
    "applescript": "^1.0.0",
    "auto-launch": "^5.0.5",
    "axios": "^0.21.1",
    "bootstrap": "^4.6.0",
    "classnames": "^2.3.1",
    "dotenv": "^10.0.0",
    "electron-is-dev": "^2.0.0",
    "electron-log": "^4.3.5",
    "electron-store": "^8.0.0",
    "electron-unhandled": "^3.0.2",
    "electron-updater": "^4.3.8",
    "eslint_d": "^10.0.4",
    "final-form": "^4.20.2",
    "immutability-helper": "^3.1.1",
    "javascript-time-ago": "^2.3.4",
    "jquery": "^3.6.0",
    "loader-utils": "^2.0.0",
    "lodash": "^4.17.21",
    "menubar": "^9.0.3",
    "msal-electron-poc": "^0.1.0",
    "plist": "^3.0.2",
    "prop-types": "^15.7.2",
    "query-string": "^7.0.1",
    "rage-edit": "^1.2.0",
    "rc-switch": "^3.2.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-final-form": "^6.5.3",
    "react-loader-spinner": "^4.0.0",
    "react-switch": "^6.0.0",
    "react-time-ago": "^6.2.2",
    "react-uuid": "^1.0.2",
    "reactstrap": "^8.9.0",
    "source-map-support": "^0.5.16",
    "timeago-react": "^3.0.2",
    "uuid": "^8.3.2",
    "winreg-vbs": "^1.0.0",
    "xml2js": "^0.4.23"
  },
  "devDependencies": {
    "@babel/preset-react": "^7.13.13",
    "electron": "^12.0.7",
    "electron-builder": "^22.10.5",
    "electron-notarize": "^1.0.0",
    "electron-webpack": "^2.8.2",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-plugin-align-import": "^1.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "sass": "^1.32.12",
    "sass-loader": "^10",
    "stylelint": "^13.13.0",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-scss": "^3.19.0",
    "typescript": "^4.2.4",
    "webpack": "~4.42.1"
  }
}
